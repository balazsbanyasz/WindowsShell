$ip = ""; $d = "5";
$ip = Read-Host "Please enter url eg. facebook.com or IP address"; $d = Read-Host "Enter ping frequency in seconds";
do {$ping = test-connection -comp $ip -Delay $d -Quiet;  Write-Host "$(Get-Date) $ip is down" -ForegroundColor Red} 
until ($ping) Write-Host "$(Get-Date) $ip is up" -ForegroundColor Green;
